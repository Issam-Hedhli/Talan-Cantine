<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".FirstActivity"
    tools:visibility="visible">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#CECECE"
        android:gravity="center"
        android:text="Création de plat"
        android:textColor="#0C0505"
        android:backgroundTint="#F2F2F2"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:includeFontPadding="false"
            android:text="Titre du plat"
            android:padding="10dp"
            android:textColor="@color/purple_200"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/titre_plat"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:padding="10dp"

            android:ems="10"
            android:hint="Nom du plat"
            android:inputType="textPersonName"
            android:textColor="#7E7A7A"
            android:textColorHighlight="#434141"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="459dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:text="Séléctionner une catégorie"
            android:textColor="@color/purple_200"
            android:textSize="18sp"
            android:padding="10dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_categorie"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Ajouter une image "
            android:textColor="@color/purple_200"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <Button
            android:id="@+id/buttonAjouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="Ajouter"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagePlat"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonValider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:text="Valider"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>